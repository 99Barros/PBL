@model PBL_ThermoMotorIOT_Cad.Models.EmpresaViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cadastro de Empresa</h2>

<form asp-action="Save" method="post" class="form">
    <input type="hidden" name="Operacao" value="@ViewBag.Operacao" />

    <div class="row">
        <div class="col-md-6 form-group">
            <label asp-for="id" class="control-label">Id da Empresa</label>
            <input asp-for="id" class="form-control" readonly />
        </div>
        <div class="col-md-6 form-group">
            <label asp-for="NomeEmpresa" class="control-label">Nome da Empresa</label>
            <input asp-for="NomeEmpresa" class="form-control" required />
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 form-group">
            <label asp-for="CNPJ" class="control-label">CNPJ</label>
            <input asp-for="CNPJ" class="form-control" required />
        </div>
        <div class="col-md-6 form-group">
            <label asp-for="CEP" class="control-label">CEP</label>
            <input asp-for="CEP" id="cep" class="form-control" required />
            <input type="button" name="btnBuscaCEP" value="Buscar" onclick="buscaCEP()" class="btn btn-info mt-2" />
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 form-group">
            <label asp-for="Logradouro" class="control-label">Logradouro</label>
            <input asp-for="Logradouro" id="logradouro" class="form-control" required />
        </div>
        <div class="col-md-6 form-group">
            <label asp-for="Numero" class="control-label">Número</label>
            <input asp-for="Numero" id="numero" class="form-control" required />
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 form-group">
            <label asp-for="Cidade" class="control-label">Cidade</label>
            <input asp-for="Cidade" id="localidade" class="form-control" required />
        </div>
        <div class="col-md-6 form-group">
            <label asp-for="Estado" class="control-label">Estado</label>
            <input asp-for="Estado" id="uf" class="form-control" required />
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 form-group">
            <label asp-for="Telefone" class="control-label">Telefone</label>
            <input asp-for="Telefone" class="form-control" />
        </div>
        <div class="col-md-6 form-group">
            <label asp-for="Email" class="control-label">Email</label>
            <input asp-for="Email" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Salvar dados</button>
    </div>
</form>
