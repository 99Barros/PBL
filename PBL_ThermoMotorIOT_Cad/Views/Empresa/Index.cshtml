@{
}
@model List<PBL_ThermoMotorIOT_Cad.Models.EmpresaViewModel>

<h2>Listagem das Empresas</h2>
<a href="Empresa/Create">Novo Registro</a>
<a href="Empresa/ConsultaAvancada">Consulta Avançada</a>
<br />
<table class="table table-responsive">
    <tr>
        <th>Ações</th>
        <th>Nome da Empresa</th>
        <th>CNPJ</th>
        <th>CEP</th>
        <th>Logradouro</th>
        <th>Número</th>
        <th>Cidade</th>
        <th>Estado</th>
        <th>Telefone</th>
        <th>Email</th>
    </tr>
    @if(Model is not null)
    {
        @foreach (var empresa in Model)
        {
            <tr>
                <td>
                    <a href="Empresa/edit?id=@empresa.id"> Editar</a>
                    &nbsp;&nbsp;
                    <a href="javascript:apagarEmpresa(@empresa.id)">Apagar</a>
                </td>
                <td>@empresa.NomeEmpresa</td>
                <td>@empresa.CNPJ</td>
                <td>@empresa.CEP</td>
                <td>@empresa.Logradouro</td>
                <td>@empresa.Numero</td>
                <td>@empresa.Cidade</td>
                <td>@empresa.Estado</td>

                <td>@empresa.Telefone</td>
                <td>@empresa.Email</td>                
            </tr>
        }
    }
</table>


<script>
    function apagarEmpresa(id) {
        if (confirm('Confirma a exclusão do registro?'))
            location.href = 'Empresa/Delete?id=' + id;
    }
</script>