@{
}
@model List<PBL_ThermoMotorIOT_Cad.Models.EmpresaViewModel>

<h2>Listagem das Empresas</h2>
<a href="Empresa/Create">
        <img src="~/img/add.png" alt="Adicionar" title="Adicionar" style="width:20px; height:20px;" />
</a>
<br />
<table class="table table-responsive">
    <tr>
        <th>Ações</th>
        <th>Nome da Empresa</th>
        <th>CNPJ</th>
        <th>CEP</th>
        <th>Logradouro</th>
        <th>Número</th>
        <th>Cidade</th>
        <th>Estado</th>
        <th>Telefone</th>
        <th>Email</th>
        <th>Imagem</th>
    </tr>
    @if(Model is not null)
    {
        @foreach (var empresa in Model)
        {
            <tr>
                <td>
                    <a href="Empresa/edit?id=@empresa.id">
                        <img src="~/img/edit.png" alt="Editar" title="Editar" style="width:20px; height:20px;" />
                    </a>
                    &nbsp;&nbsp;
                    <a href="javascript:apagarEmpresa(@empresa.id)">
                        <img src="~/img/delete.png" alt="Apagar" title="Apagar" style="width:20px; height:20px;" />
                    </a>
                </td>
                <td>@empresa.NomeEmpresa</td>
                <td>@empresa.CNPJ</td>
                <td>@empresa.CEP</td>
                <td>@empresa.Logradouro</td>
                <td>@empresa.Numero</td>
                <td>@empresa.Cidade</td>
                <td>@empresa.Estado</td>
                <td>@empresa.Telefone</td>
                <td>@empresa.Email</td>
                <td>
                <img src="data:image/jpeg;base64,@empresa.ImagemEmBase64" class="img-responsive" width="40" />
                </td>
            </tr>
        }
    }
</table>


<script>
    function apagarEmpresa(id) {
        if (confirm('Confirma a exclusão do registro?'))
            location.href = 'Empresa/Delete?id=' + id;
    }
</script>