<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard 2</title>
    <link rel="stylesheet" href="site.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <div class="header">
        <h1>Dashboard - Total de cadastramentos</h1>
    </div>
    <div class="dashboard">
        <canvas id="myPieChart" class="chart"></canvas>
    </div>

    <script>
        // Dados do servidor passados via ViewBag
        const labels = @Html.Raw(Json.Serialize(ViewBag.Labels));
        const values = @Html.Raw(Json.Serialize(ViewBag.Values));

        // Renderiza o gr√°fico usando Chart.js
        const ctx = document.getElementById('myPieChart').getContext('2d');
        new Chart(ctx, {
            type: 'pie',
            data: {
                labels: labels,
                datasets: [{
                    data: values,
                    backgroundColor: ['#FF6384', '#36A2EB', '#FFCE56'],
                }]
            }
        });
    </script>
</body>
</html>
