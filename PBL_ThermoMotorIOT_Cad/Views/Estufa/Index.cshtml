@model List<PBL_ThermoMotorIOT_Cad.Models.EstufaViewModel>

<h2>Listagem das Estufas</h2>
<a href="Estufa/Create">
    <img src="~/img/add.png" alt="Adicionar" title="Adicionar" style="width:20px; height:20px;" />
</a>
<br />
<table class="table table-responsive">
    <tr>
        <th>Ações</th>
        <th>Id</th>
        <th>Modelo</th>
        <th>Descrição</th>
        <th>Empresa</th>
        <th>Preço</th>
        <th>Período de Locação</th>
        <th>Data de Cadastro</th>
    </tr>
    @if (Model is not null)
    {
        @foreach (var estufa in Model)
        {
            <tr>
                <td>
                    <a href="Estufa/Edit?id=@estufa.id">
                        <img src="~/img/edit.png" alt="Editar" title="Editar" style="width:20px; height:20px;" />
                    </a>
                        &nbsp;&nbsp;
                    <a href="javascript:apagarEstufa(@estufa.id)">
                        <img src="~/img/delete.png" alt="Apagar" title="Apagar" style="width:20px; height:20px;" />
                    </a>
                </td>
                <td>@estufa.id</td>
                <td>@estufa.Modelo</td>
                <td>@estufa.Descricao</td>
                <td>@ViewData[estufa.IdEmpresa.ToString()]</td>
                <td>@estufa.Preco</td>
                <td>@estufa.PeriodoLocacao</td>
                <td>@estufa.DataCadastro</td>
            </tr>
        }
    }
</table>


<script>
    function apagarEstufa(id) {
        if (confirm('Confirma a exclusão do registro?'))
            location.href = 'Estufa/Delete?id=' + id;
    }
</script>