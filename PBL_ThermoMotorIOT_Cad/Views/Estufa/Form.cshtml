@model PBL_ThermoMotorIOT_Cad.Models.EstufaViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Cadastro de Estufa</h2>
<form asp-action="Salvar" method="post" class="form">
    <div class="form-group">
        <label asp-for="IdEstufa" class="control-label">Id da Estufa</label>
        <input asp-for="IdEstufa" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="IdUsuario" class="control-label">Usuario</label>
        <select asp-for="IdUsuario" asp-items="ViewBag.Usuarios" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="IdEmpresa" class="control-label">Empresa</label>
        <select asp-for="IdEmpresa" asp-items="ViewBag.Empresas" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="Modelo" class="control-label">Modelo</label>
        <input asp-for="Modelo" class="form-control" required maxlength="50" />
    </div>
    <div class="form-group">
        <label asp-for="Descricao" class="control-label">Descrição</label>
        <input asp-for="Descricao" class="form-control" maxlength="255" />
    </div>
    <div class="form-group">
        <label asp-for="Preco" class="control-label">Preço</label>
        <input asp-for="Preco" class="form-control" step="0.01" required />
    </div>
    <div class="form-group">
        <label asp-for="PeriodoLocacao" class="control-label">Período de Locação</label>
        <input asp-for="PeriodoLocacao" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Salvar dados</button>
</form>