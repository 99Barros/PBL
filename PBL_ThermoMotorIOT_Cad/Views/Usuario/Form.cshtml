@model PBL_ThermoMotorIOT_Cad.Models.UsuarioViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Cadastro de Usuário</h2>
<form action="Salvar" method="post">
    <label for="IdUsuario" class="control-label">Id do Usuário</label>
    <input type="text" Name="IdUsuario" value="@Model.IdUsuario" readonly/>
    <br />
    <label for="Usuario" class="control-label">Usuário</label>
    <input type="text" Name="Usuario" value="@Model.Usuario" required />
    <br />
    <label for="Senha" class="control-label">Senha</label>
    <input type="password" Name="Senha" value="@Model.Senha" required />
    <br />
    <label for="Nome" class="control-label">Nome</label>
    <input type="text" Name="Nome" value="@Model.Nome" required/>
    <br />
    <label for="Email" class="control-label">Email</label>
    <input type="text" Name="Email" value="@Model.Email" required/>
    <br />
    <label for="DataNascimento" class="control-label">Data de Nascimento</label>
    <input type="date" Name="DataNascimento" value="@Model.DataNascimento" />
    <br />
    <label for="Telefone" class="control-label">Telefone</label>
    <input type="text" Name="Telefone" value="@Model.Telefone" />
    <br />
    <input type="submit" value="Salvar dados" />
    <br />
</form>