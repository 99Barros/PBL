@{
    ViewData["Title"] = "ThermoMotor IoT Solutions";
}
@model List<PBL_ThermoMotorIOT_Cad.Models.UsuarioViewModel>

<h2>Listagem dos Usuários</h2>
<a href="Usuario/Create">
    <img src="~/img/add.png" alt="Adicionar" title="Adicionar" style="width:20px; height:20px;" />
</a>
<br />
<table class="table table-responsive">
    <tr>
        <th>Ações</th>
        <th>Login</th>
        <th>Nome</th>
        <th>Email</th>
        <th>Data de Nascimento</th>
        <th>Telefone</th>
    </tr>
    @if (Model is not null)
    {
        @foreach (var usuario in Model)
        {
            <tr>
                <td>
                    <a href="Usuario/edit?id=@usuario.id">
                        <img src="~/img/edit.png" alt="Editar" title="Editar" style="width:20px; height:20px;" />
                        </a>
                    &nbsp;&nbsp;
                    <a href="javascript:apagarUsuario(@usuario.id)">
                        <img src="~/img/delete.png" alt="Apagar" title="Apagar" style="width:20px; height:20px;" />
                    </a>
                </td>
                <td>@usuario.Login</td>
                <td>@usuario.Nome</td>
                <td>@usuario.Email</td>
                <td>@Html.DisplayFor(model => usuario.DataNascimento)</td>
                <td>@usuario.Telefone</td>
            </tr>
        }
    }
</table>


<script>
    function apagarUsuario(id) {
        if (confirm('Confirma a exclusão do registro?'))
            location.href = 'Usuario/Delete?id=' + id;
    }
</script>