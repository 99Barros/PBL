@{
}
@model List<PBL_ThermoMotorIOT_Cad.Models.UsuarioViewModel>

<h2>Listagem dos Usuários</h2>
<a href="Usuario/Create">Novo Registro</a>
<br />
<table class="table table-responsive">
    <tr>
        <th>Ações</th>
        <th>Login</th>
        <th>Nome</th>
        <th>Email</th>
        <th>Data de Nascimento</th>
        <th>Telefone</th>
    </tr>
    @if (Model is not null)
    {
        @foreach (var usuario in Model)
        {
            <tr>
                <td>
                    <a href="usuarios/edit?id=@usuario.IdUsuario">Editar</a>
                    &nbsp;&nbsp;
                    <a href="javascript:apagarUsuario(@usuario.IdUsuario)">Apagar</a>
                </td>
                <td>@usuario.Login</td>
                <td>@usuario.Nome</td>
                <td>@usuario.Email</td>
                <td>@usuario.DataNascimento</td>
                <td>@usuario.Telefone</td>                
            </tr>
        }
    }
</table>


<script>
    function apagarUsuario(id) {
        if (confirm('Confirma a exclusão do registro?'))
            location.href = 'Usuario/Delete?id=' + id;
    }
</script>